<%- include('../layouts/header')  %> 
<%-include('../layouts/partials/admin-header') %>



<div class="container"> 
    <section class=""> 

        <div class="col-lg-6 mb-5 p-5 mb-lg-0 mx-auto"> 
          <div class="card" style="border-radius:15px;"> 
            <div class="card-body py-5 px-md-5 " style="background-color: #59ab6e;border-radius:15px;"> 
              <form action="/admin-panel/category" method="post"> 
                <!-- 2 column grid layout with text inputs for the first and last names --> 
                <div class="row"> 
                  <div class="col-md-12 mb-4"> 
                    <div class="form-outline"> 
                      <input type="text-uppercase" name="category" id="form3Example1" class="form-control" placeholder="Category" required/> 
                    </div> 
                    <% if(validation.categories){ %>
                      <b><p class="mt-2 fw-bold" style="color: red;">Already Added</p></b>
                    <% } %>  
                  </div> 
 
                <!-- Submit button --> 
                <button type="submit" class="btn btn-primary btn-block mb-4"> 
                  Add Category 
                </button> 
 
              </form> 
             
</section> 
    <table class="table table-hover"> 
        <thead> 
            <tr> 
              <th scope="col">No.</th> 
              <th scope="col">Categories</th> 
              <th scope="col">Delete</th> 
            </tr> 
          </thead> 
          <tbody> 
           
            <% for(let i=0;i<categories.length;i++) { %> 
              <!-- <th scope=""> --> 
                <tr>
                  <th scope="row"><%= i+1  %> </th>
                <td><span style="font-weight: 700;" class="col-md-5 d-flex"><%= categories[i].category %></span></td>
                <td><form action="/admin/delete-category?id=<%= categories[i]._id %>" method="post">
                  <button  type="submit" class="btn btn-danger" onclick="return confirm('Are you want to delete <%= categories[i].category %>')" >
                  Delete
                </button>
              </form>
               </td>
                <!-- <hr> --> 
              </tr>
              <!-- </th> --> 
            <% } %>   

            
            </tbody> 
      </table> 
  </div>