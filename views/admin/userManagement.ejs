<%- include('../layouts/header')  %> 
<%-include('../layouts/partials/admin-header') %>

<section>
    <div class="container">
  
          <table id="myTable" class="table mt-5">
          <input type="text" class="mt-5 ml-auto" id="myInput" onkeyup="myFunction()" placeholder="Search for names..">
    <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Title</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <!-- <th>Image</th> -->
      <th>       Block/Unbolck</th>
      
    </tr>
  </thead>
  <tbody>
   
    <% for(let i=0;i<users.length;i++) { %> 
        <tr>
          <th scope="row"><%= i+1  %> </th>
          
    
          <td><%= users[i].name %> </td>
          <td><%= users[i].email %></td>
          <td></td>
        
          <td>
            <% if(users[i].blockStatus){ %> 
                <form action="admin_panel/user-management/unblock?id=<%= users[i]._id %> " method="post">
                <button  class="btn btn-primary" onclick="return  confirm('Are you want to unblock <%= users[i].name %>')" >Unblock</button>
            </form>
                
            
            <% }else{ %> 
                <form action="admin_panel/user-management/block?id=<%= users[i]._id %> " method="post" >
                    <button class="btn btn-danger" onclick="return  confirm('Are you want to block <%= users[i].name %>')">Block</button>
                </form>
            <% } %> 
          </td>
        </tr>
        <% }%> 
        <!-- {{/each}} -->
  </tbody>
</table>
    </div>
</section>

