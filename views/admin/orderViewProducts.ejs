<%- include('../layouts/header')  %> 
<%-include('../layouts/partials/admin-header') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">


<div class="dropdown">
  <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Download
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" >
      <li><a class="dropdown-item" href="/admin/exportExcel">Excel</a></li>
      <li><a class="dropdown-item" onclick="myfun('pt')">Pdf</button></li>

  </ul>
</div>

<div class="table-responsive p-5" id="pt"> 
    <table class="table table-hover" id="usertable"> 
      <div class="table table-hover container"  > 
        <thead> 
          <tr> 
                <th scope="col">Product Id</th> 
                <th scope="col">Price</th> 
                <!-- <th scope="col">Offer Price</th>  -->
                <th scope="col">Category</th> 
                <th scope="col">Image</th> 
                <th scope="col">Quantity</th> 
                <th scope="col">Status</th> 
          </tr> 
        </thead> 
        <tbody> 
        <% for(i=0;i<orderItems.length;i++) { %>  
          <tr> 
            <td><%= orderItems[i].productName %> </td> 
            <td><%= orderItems[i].price %> </td> 
            <!-- <td><%= //orderItems[i].offerPrice %></td>  -->
            <td><%= orderItems[i].category  %></td> 
            <td> 
                <img id="main-image" src="/multimages/<%= orderItems[i].image1 %>" style="width: 5rem;height: 5rem;" alt=""> 
            </td> 
            <td><%=orderItems[i].quantity %></td> 
            <td style="font-weight: 600;"><%=viewOrder.orderStatus %></td> 
          </tr> 
        <% } %>  
        </tbody> 
      </table> 
  </div>
</div>


<script>
  console.log("script working")
  function myfun(pt) {
      var bk = document.body.innerHTML;
      var dv = document.getElementById('pt').innerHTML;
      document.body.innerHTML = dv;
      document.body.style.padding = "20px"
      window.print();
      location.reload();
  }
  $(document).ready(function () {
      $('#usertable').DataTable()
  });
</script>
