
<%- include('../layouts/header.ejs')  %> 
<%-include('../layouts/partials/user-header.ejs') %> 

<!------ Include the above in your HEAD tag ---------->


	<div class="cart-wrap">
		<div class="container">
	        <div class="row">
			    <div class="col-md-12">
			        <div class="main-heading mb-10">My wishlist</div>
			        <div class="table-wishlist">
				        <table cellpadding="0" cellspacing="0" width="100%">
				        	<thead>
					        	<tr>
					        		<th width="45%">Product Name</th>
					        		<th width="15%">Unit Price</th>
					        		<th width="15%"></th>
					        		<th width="15%"></th>
					        		<th width="10%">Stock Status</th>
					        	</tr>
					        </thead>
					        <tbody>
								 
					        	<% for(let i=0;i<docs.length;i++){ %> 
					        	<tr>
					        		<td width="45%">
					        			<div class="display-flex align-center">
		                                    <div class="img-product">
		                                        <img src="/multimages/<%= docs[i].image1 %>" alt="" class="mCS_img_loaded">
		                                    </div>
		                                    <div class="name-product">
		                                      <%= docs[i].productName %> 
		                                    </div>
	                                    </div>
	                                </td>
					        		<td width="15%" class="price"><%= docs[i].price %> </td>
					        		<td width="15%"><span class="in-stock-box"><%= docs[i].quantity %> </span></td>
					        		<td width="15%"><a href="/cart?id=<% docs[i].productid %>"><button class="round-black-btn small-btn"> Add to Cart</button></td></a>
					        		<td width="10%" class="text-center"><a href="/user_home/removewish?id=<%=docs[i]._id %> " class="trash-icon"><i class="fa fa-trash"></i></a></td>
					        	</tr>
                                <% } %> 
					        	
				        	</tbody>
				        </table>
				    </div>
					<% if(docs.length<1){ %>
						
						<p style="text-align:center;">wishlist is empty </p>
						<% } %> 
			    </div>
			</div>
		</div>
	</div>