<%- include('../layouts/header.ejs')  %> 
<%-include('../layouts/partials/user-header.ejs') %> 

 

<div class="wrapper container">
        <div class="row justify-content-center mt-3">
            <div class="col-5">
                <form action="/user_home/profile-edit?id=<%= result._id %>" enctype="multipart/form-data" method="post" >
                    

                    <div class="form-group "style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                        <label for="exampleInputName1">Name</label>
                        <input type="text" value="<%= result.name %>" name="name" class="form-control" id="name">
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputExpertise1">Mobile</label>
                        <input type="text" value="<%= result.mobile %>" name="phone" class="form-control" id="phone">
                    </div>
                    <div class="form-group mt-3">
                        <label for="exampleInputDescription1">Email</label>
                        <input type="text" value="<%= result.email%>" name="email" class="form-control" id="email">
                    </div>
                    <div class="row">
                        <div class="mt-3">
                            <input type="file"  class="form-control" name="image1" id="formFile" accept="image/*">
                            <p></p>
                        </div>
                        <button type="submit" class="btn btn-warning mt-3">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>